<Window x:Class="Chatter.MetroClient.UI.TransferFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SendFileWindow"
        Height="318" 
        Width="525.867"
        AllowsTransparency="True" 
        WindowStyle="None"
       
      Background="#4c8dae"
        >
    <Window.Resources>

        <!-- 引用外部资源文件 -->

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Dictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Window.Resources>
    <Grid Name="grid">

        <Button Name="minBtn" Panel.ZIndex="1"  HorizontalAlignment="Right" Margin="0,2,2,0" Grid.RowSpan="2"  VerticalAlignment="Top"  Style="{StaticResource minBtnStyle}"  />

    

    </Grid>
</Window>
