<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="350" Width="525">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button 
            
            Name="btnLogin" 
            Grid.Row="4"
            Grid.Column="0"
            Click="OnLoginBtnLogin" 
            Content="登录"
             Width="100"
            Height="50"  
           Margin="0,0,0,10" RenderTransformOrigin="0.402,0.658" Background="#FFB02828" BorderBrush="#FFB83E3E" Foreground="#FF171515"
            
            >
            <Button.Template>
                <ControlTemplate>
                    <Border 
                        CornerRadius="33,33,33,33" 
                        Background="AliceBlue"
                        />
                    
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
